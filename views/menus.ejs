<%- include('partials/header') %> 

<body class="g-sidenav-show  bg-gray-200">
    <%- include('partials/sidebar') %>

    <div>
        <h1 class="mx-4 mb-2">Create Menu</h1>
        <form class="mx-4 mb-5" action="/create_menu" method="post" enctype="multipart/form-data">
  
          <div class="input-group input-group-outline my-3">
  
            <label htmlFor="post_title" class="form-label">Add a new Menu</label>
            <input type="text" name='menutitle' class="form-control" >
          </div>
          <button type="submit" class="btn btn-warning" >Save</button>
  
  
        </form>
        <ul class="mt-5 mb-3 mx-5 list-group">
      <h3 class='p-2'>Current Menus</h3>

      <% menu.forEach(e => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <%- e.Menu %>
          <button type="button" class="btn-close bg-secondary"  data-bs-dismiss="alert"></button>
        </li>
      <% }) %>
       
           
          
          
         
        </ul>
      </div>

      <%- include('partials/footer') %> 