<%- include('partials/header') %> 

<body class="g-sidenav-show  bg-gray-200">
    <%- include('partials/sidebar') %>

<div>
    <h1 class="mx-4 mb-2">Create New Category</h1>
    <form class="mx-4 mb-5" action="/addcategory" method="post" enctype="multipart/form-data">

        <div class="input-group input-group-outline my-3">

            <label class="form-label">Add a new category</label>
            <input type="text" name='catname' class="form-control" />
        </div>
        <button type="submit" class="btn btn-warning" >Save</button>
    </form>
    <ul class=" mt-5 mb-3 mx-5 list-group">

        <% category.forEach(e => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
               <%- e.CategoryName %> 
                <button type="button" class="btn-close bg-secondary"  data-bs-dismiss="alert"></button>
            </li> 
        <% }) %>
                
               
            
        </ul>
</div>

<%- include('partials/footer') %> 